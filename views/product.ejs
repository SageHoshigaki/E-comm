<!DOCTYPE html>
<%- include('partials/head.ejs'); %> <%- include('partials/header.ejs'); %>
<body>
  <div class="productContent is-flex is-flex-direction-row">
    <div class="product column">
      <img class="productImg" name="productImg" src="../<%=productData.img%>" />
    </div>

    <div class="product-details column">
      <h6 class="pd-title"><%= productData.storeTitle %></h6>
      <h1 id="itemvalue" name="itemvalue" value="<%=productData.itemName%>">
        <%= productData.itemName%>
      </h1>
      <h6 name="price">$ <%=productData.price%></h6>

      <div class="btn-group">
        <button type="button" class="button is-dark" data-toggle="dropdown">
          Color
        </button>
        <div class="dropdown">
          <div class="dropdown-trigger">
            <button
              class="button"
              aria-haspopup="true"
              aria-controls="dropdown-menu"
            >
              <span>Size</span>
              <span class="icon is-small">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </div>
          <div class="dropdown-menu" id="dropdown-menu" role="menu">
            <div class="dropdown-content">
              <a href="#" class="dropdown-item"> Dropdown item </a>
              <a class="dropdown-item"> Other dropdown item </a>
              <a href="#" class="dropdown-item is-active">
                Active dropdown item
              </a>
              <a href="#" class="dropdown-item"> Other dropdown item </a>
              <hr class="dropdown-divider" />
              <a href="#" class="dropdown-item"> With a divider </a>
            </div>
          </div>
        </div>
      </div>

      <form action="/product" method="post" id="cartForm">
        <h4>Size Guide</h4>
        <button
          type="submit"
          class="button is-dark"
          name="addcart"
          id="addcart"
          value="<%=productData.itemName%>"
        >
          Add To Cart
        </button>
        <input
          type="hidden"
          value="<%=productData.price%>"
          name="price"
          id="item-price"
        />
      </form>
    </div>
  </div>

  <%- include('partials/shoppingbag.ejs') %>
</body>
